{
  "root": true,
  "extends": [
    "standard",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:react/recommended"
  ],
  "rules" : {
    "no-useless-call": "off",
    "space-before-function-paren": "off",
    "object-property-newline": "off"
  },
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jquery": true,
    "jest": true
  },
  "globals": {},
  "settings": {
    "import/resolver" : {
      "alias": {
        "map" : [
          ["@", "./src"]
        ],
        "extensions": [".js", ".json"]
      }
    }
  }
}
